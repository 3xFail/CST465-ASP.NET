@model BlogPostModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit a Blog Post";
}
<h1>Edit a Blog Post</h1>

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm())
    {
    @Html.EditorForModel()
    <button type="submit">Submit</button>
    }
}
@if(!User.Identity.IsAuthenticated)
{
     <div>
         Please Login
     </div>
}